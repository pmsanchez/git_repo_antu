<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="380dp"
    android:layout_height="500dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/allinclusive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOption"
            app:srcCompat="@drawable/allinclusiveac" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/unlimited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOption"
            app:srcCompat="@drawable/unlimited" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/everydaysav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOption"
            app:srcCompat="@drawable/everyday" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/minimum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOption"
            app:srcCompat="@drawable/minimum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/studentsav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOption"
            app:srcCompat="@drawable/student" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/investmentV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/invetsmtn" />

        <ImageView
            android:id="@+id/smallbussV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/smallbuss" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/borrowingV"
            android:layout_width="139dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/borrowing" />

        <ImageView
            android:id="@+id/creditcardV"
            android:layout_width="136dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/creditcards" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bankaccountV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bankaccounts" />
    </LinearLayout>

</LinearLayout>

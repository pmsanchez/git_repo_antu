<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="380dp"
    android:layout_height="500dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btnChequings"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:onClick="selectBankAccount"
            app:srcCompat="@drawable/chequings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnSavings"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/savings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/usdollar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/relatedserv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/electronic" />
    </LinearLayout>

</LinearLayout>
